/* public/css/style.css */

/* 通用样式 */
body{
  font-family: Arial, sans-serif;
  text-align: center;
  background-color: #F0F8FF;
  margin: 0;
  padding: 0;
}

/* 标题样式 */
h1{
  color: #FF69B4;
  margin-bottom: 10px; /* 减少标题与下面段落之间的间距 */
}

/* 段落样式 */
p{
  margin: 10px 0; /* 减少段落的外边距 */
}

/* 计数器样式 */
#counterTitle{
  font-size: 24px; /* 计数器标题大小 */
  color: #FF4500; /* 使用橙色作为计数器的颜色 */
  margin: 10px 0; /* 设置计数器与周围元素的间距 */
}

/* 居中容器 */
.container{
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 100vh; /* 全屏居中 */
  padding: 0; /* 确保没有内边距 */
  margin: 0; /* 确保没有外边距 */
}

/* 图片样式 */
#cakeImage{
  max-width: 300px; /* 控制蛋糕图片的最大宽度 */
  transition: transform 0.3s ease, filter 0.3s ease; /* 图片放大和阴影的动画过渡 */
  filter: drop-shadow(0 0 0 transparent); /* 初始无阴影 */
  margin-bottom: 20px; /* 图片与按钮之间的距离 */
}

#cakeImage:hover{
  transform: scale(1.1); /* 鼠标悬浮时放大1.1倍 */
  filter: drop-shadow(0 10px 20px rgba(0, 0, 0, 0.5)); /* 悬浮时的阴影效果 */
}

/* 隐藏图片时仍保留空间 */
.hidden{
  visibility: hidden; /* 隐藏但保留空间 */
}

/* 果冻效果 */
.jelly{
  animation: jelly-animation 0.6s ease-in-out; /* 使用自定义动画 */
}

@keyframes jelly-animation{
  0%, 100%{
    transform: scale(1);
  }
  25%{
    transform: scale(1.2, 0.8);
  }
  50%{
    transform: scale(0.8, 1.2);
  }
  75%{
    transform: scale(1.1, 0.9);
  }
}

/* 扔到桌子上的效果 */
.throw{
  animation: throw-animation 0.8s ease-out; /* 使用自定义动画 */
}

@keyframes throw-animation{
  0%{
    transform: translateY(-200px) scale(0.5); /* 从高处掉下来，缩小状态 */
    opacity: 0.5;
  }
  60%{
    transform: translateY(30px) scale(1.1); /* 下落到桌面前，轻微放大 */
    opacity: 1;
  }
  80%{
    transform: translateY(-15px) scale(1); /* 反弹回升 */
  }
  100%{
    transform: translateY(0) scale(1); /* 最终稳定在桌面 */
  }
}

/* 按钮样式 */
#resetButton{
  margin-top: 20px;
  padding: 15px 30px;
  background-color: #FF69B4; /* 主题色，粉色 */
  color: white; /* 按钮文字白色 */
  font-weight: bold; /* 加粗字体 */
  font-size: 18px; /* 字体大小 */
  border: none;
  border-radius: 5px; /* 圆角按钮 */
  cursor: pointer;
  transition: background-color 0.3s ease, transform 0.2s ease; /* 背景色和按下动画过渡 */
}

#resetButton:hover{
  background-color: #FF1493; /* 鼠标悬浮时变成深粉色 */
  transform: scale(1.05); /* 悬浮时稍微放大 */
}

#resetButton:active{
  transform: scale(0.98); /* 按下时缩小一点，制造按压效果 */
}
